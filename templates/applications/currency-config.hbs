<div class="dhp-settings-config">
  <div class="setting-row">
    <label>{{localize "DHP.Settings.Currency.Enable.Name"}} <span class="scope-badge world">{{localize "DHP.Settings.Scope.World"}}</span></label>
    <input type="checkbox" name="enableCurrency" {{#if enableCurrency}}checked{{/if}} />
    <p class="hint">{{localize "DHP.Settings.Currency.Enable.Hint"}}</p>
  </div>

  <h4>{{localize "DHP.Settings.Currency.Icons.Title"}} <span class="scope-badge world">{{localize "DHP.Settings.Scope.World"}}</span></h4>

  <div class="setting-row file-picker-row">
    <label>{{localize "DHP.Settings.Currency.Icons.Coins.Name"}}</label>
    <div class="file-input-wrapper">
      <input type="text" name="currencyIconCoins" value="{{currencyIconCoins}}" placeholder="Default icon" />
      <button type="button" data-action="filePicker" data-field="currencyIconCoins"><i class="fas fa-file-image"></i></button>
    </div>
  </div>

  <div class="setting-row file-picker-row">
    <label>{{localize "DHP.Settings.Currency.Icons.Handfuls.Name"}}</label>
    <div class="file-input-wrapper">
      <input type="text" name="currencyIconHandfuls" value="{{currencyIconHandfuls}}" placeholder="Default icon" />
      <button type="button" data-action="filePicker" data-field="currencyIconHandfuls"><i class="fas fa-file-image"></i></button>
    </div>
  </div>

  <div class="setting-row file-picker-row">
    <label>{{localize "DHP.Settings.Currency.Icons.Bags.Name"}}</label>
    <div class="file-input-wrapper">
      <input type="text" name="currencyIconBags" value="{{currencyIconBags}}" placeholder="Default icon" />
      <button type="button" data-action="filePicker" data-field="currencyIconBags"><i class="fas fa-file-image"></i></button>
    </div>
  </div>

  <div class="setting-row file-picker-row">
    <label>{{localize "DHP.Settings.Currency.Icons.Chests.Name"}}</label>
    <div class="file-input-wrapper">
      <input type="text" name="currencyIconChests" value="{{currencyIconChests}}" placeholder="Default icon" />
      <button type="button" data-action="filePicker" data-field="currencyIconChests"><i class="fas fa-file-image"></i></button>
    </div>
  </div>

  <div class="form-footer">
    <button type="submit"><i class="fas fa-save"></i> {{localize "Save"}}</button>
  </div>
</div>
